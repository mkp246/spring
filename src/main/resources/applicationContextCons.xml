<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="employee1" class="demo.cons.Employee">
        <property name="id" value="1"></property>
        <property name="address" ref="addressBean"></property>
        <property name="name" value="mkp"></property>
    </bean>
    <bean id="addressBean" class="demo.Address">
        <constructor-arg value="gaziabad"></constructor-arg>
        <constructor-arg value="UP"></constructor-arg>
        <constructor-arg value="India"></constructor-arg>
    </bean>

</beans>